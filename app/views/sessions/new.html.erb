<h1>Log in</h1>

<div class="row">
  <div class="col-md-4 offset-3">
    <%= form_with(url: sessions_path, scope: :session, local: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'my-3 form-control' %>

      <%= f.submit "Log in", class: " my-5 btn btn-primary" %>
    <% end %>

    <h5>Don't have an account? </h5> <%= link_to 'Sign in', new_user_path%>

  </div>
</div>